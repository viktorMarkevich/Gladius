%h1 Listing users

.well
  %table.table.table-striped.pretty
    %tr
      %th ID
      %th Photo
      %th ФИО
      %th Status
      %th Role
      %th Редактировать профиль
      %th Удалить профиль

    - @users.each do |user|
      %tr
        %td= user.id
        %td= image_tag user.avatar.url(:large)
        %td= link_to user.full_name, user_path(user)
        %td= user.status
        %td= user.role
        %td= link_to_if((can? :update, user) || (user == current_user) , "Edit", edit_user_path(user))
        %td= link_to_if((can? :destroy, user), "Delete", user_path(user), :method => :DELETE)
